<odoo>
    <data>
        <record id ="session_tree_view" model="ir.ui.view">
            <field name="name">session tree</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <tree>

                    <field name="name"/>
                    <field name="duration"/>
                </tree>
            </field>
        </record>
         <record id ="session_form_view" model="ir.ui.view">
            <field name="name">session form</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                       <group string="General">
                         <field name="name" />
                         <field name="instructor"/>
                           <field name="country_id"/>
                            <field name="course"/>
                       </group>
                        <group string="Schedule" >
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="seats"/>

                        </group>
                        </group>
                        <label for="attendee_id"/>
                        <field name="attendee_id" />

                    </sheet>
                </form>
            </field>
        </record>


         <record id="session_list_action" model="ir.actions.act_window">
             <field name="name">session</field>
             <field name="res_model">openacademy.session</field>
             <field name="view_mode">tree,form</field>
             <field name="help" type="html">

                 <p class="o_view_nocontent_smiling_face">create the first course
                 </p>
             </field>
         </record>

        <menuitem id="session_menu" name="sessions" parent="openacademy_menu" action="session_list_action" sequence="2"/>
    </data>
</odoo>